@model GymPro.Models.HoiVienViewModel

@{
    ViewBag.Title = "Danh sách hội viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hoivien-container">
    <h2 class="page-title">Danh sách hội viên</h2>

    @if (User.IsInRole("Admin") || User.IsInRole("PT"))
    {
        <a href="@Url.Action("ThemHoiVien", "HoiVien")" class="btn-add">
            + Thêm hội viên
        </a>
    }

    <div class="table-wrapper">
        <table class="custom-table">
            <thead>
                <tr>
                    <th>Họ đệm</th>
                    <th>Tên</th>
                    <th>Email</th>
                    <th>Điện thoại</th>
                    <th>Giới tính</th>
                    <th>Ngày sinh</th>
                    <th>Địa chỉ</th>
                    <th>Ngày đăng ký</th>
                    <th>Hình ảnh</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.hoivien)
                {
                    <tr>
                        <td>@item.hoiviens.hoivien_hodem</td>
                        <td>@item.hoiviens.hoivien_ten</td>
                        <td>@item.hoiviens.hoivien_email</td>
                        <td>@item.hoiviens.hoivien_dienthoai</td>
                        <td>@item.gioitinh</td>
                        <td>@item.ngaysinh.ToString("dd/MM/yyyy")</td>
                        <td>@item.hoiviens.hoivien_diachi</td>
                        <td>@item.ngaydangky.ToString("dd/MM/yyyy")</td>
                        <td>
                            <img src="@item.hoiviens.hoivien_hinhanh"
                                 alt="Hình hội viên"
                                 class="member-avatar" />
                        </td>
                        <td class="action-links">
                            @Html.ActionLink("Sửa", "SuaHoiVien", new { id = item.hoiviens.hoivien_ma }, new { @class = "action-btn edit" }) |
                            @Html.ActionLink("Chi tiết", "ChiTietHoiVien", new { id = item.hoiviens.hoivien_ma }, new { @class = "action-btn details" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #161616;
        color: #EDECFF;
        font-family: 'Poppins', sans-serif;
    }

    .hoivien-container {
        padding: 30px;
        background-color: #012E25;
        border-radius: 12px;
        margin: 40px auto;
        max-width: 1200px;
        box-shadow: 0 0 16px rgba(101, 199, 28, 0.25);
    }

    .page-title {
        color: #AEE710;
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 25px;
        text-align: center;
    }

    .btn-add {
        display: inline-block;
        background-color: #65C71C;
        color: #161616;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        transition: 0.3s;
        margin-bottom: 20px;
    }

        .btn-add:hover {
            background-color: #AEE710;
            transform: translateY(-2px);
        }

    .table-wrapper {
        overflow-x: auto;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #161616;
        border-radius: 10px;
        overflow: hidden;
    }

        .custom-table th {
            background-color: #0BA08B;
            color: #161616;
            padding: 12px;
            text-align: center;
            font-weight: 600;
        }

        .custom-table td {
            padding: 10px;
            text-align: center;
            color: #EDECFF;
            border-bottom: 1px solid #0BA08B;
        }

        .custom-table tr:hover {
            background-color: rgba(101, 199, 28, 0.1);
            transition: 0.3s;
        }

    .member-avatar {
        max-width: 70px;
        border-radius: 8px;
        border: 2px solid #0BA08B;
    }

    .action-links {
        white-space: nowrap;
    }

    .action-btn {
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 6px;
        font-weight: 500;
        transition: 0.3s;
    }

        .action-btn.edit {
            color: #161616;
            background-color: #65C71C;
        }

            .action-btn.edit:hover {
                background-color: #AEE710;
            }

        .action-btn.details {
            color: #EDECFF;
            background-color: #0BA08B;
        }

            .action-btn.details:hover {
                background-color: #65C71C;
                color: #161616;
            }

    @@media (max-width: 768px) {
        .hoivien-container {
            padding: 15px;
        }

        .page-title {
            font-size: 1.5rem;
        }

        .custom-table th, .custom-table td {
            font-size: 0.9rem;
            padding: 8px;
        }
    }
</style>
