<!-- Form Đăng Ký -->
<section id="register" class="w-full mt-16 px-6 md:px-20">
    <div class="max-w-6xl mx-auto">
        <!-- Cột phải -->
        <div class="bg-white p-8 rounded-xl shadow">
            <h2 class="text-2xl font-bold mb-5 text-center text-yellow-600">
                Đăng ký tập thử miễn phí
            </h2>

            <form method="post" action="/Home/Register">

                <input name="TenKH" placeholder="Họ và tên"
                       class="w-full border p-3 rounded mb-4" required />

                <input name="SDT" placeholder="Số điện thoại"
                       class="w-full border p-3 rounded mb-4" required />

                <input name="Email" placeholder="Email"
                       class="w-full border p-3 rounded mb-6" required />

                <button type="submit"
                        class="w-full bg-yellow-500 text-white py-3 rounded font-bold hover:bg-yellow-600">
                    Gửi thông tin
                </button>
            </form>
        </div>


    </div>
</section>

<!-- POPUP THÀNH CÔNG -->
@if (ViewBag.Success == "true")
{
    <div id="popup"
         class="fixed inset-0 flex justify-center items-center bg-black/50 z-50">
        <div class="bg-white p-6 rounded-lg shadow-xl w-80 text-center">
            <h3 class="text-xl font-bold mb-3">Đăng ký thành công!</h3>
            <p class="mb-4">Chúng tôi sẽ liên hệ bạn sớm nhất.</p>
            <button onclick="closePopup()"
                    class="bg-yellow-500 px-4 py-2 rounded font-semibold hover:bg-yellow-600 transition">
                Đóng
            </button>
        </div>
    </div>

    <script>
        function closePopup() {
            document.getElementById("popup").style.display = "none";
        }
        // Tự ẩn sau 3 giây
        setTimeout(() => {
            closePopup();
        }, 3000);
    </script>
}

