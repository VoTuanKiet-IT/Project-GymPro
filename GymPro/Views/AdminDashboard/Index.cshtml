@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-dashboard container py-5">
    <div class="welcome-card shadow p-4 mb-4">
        <h2 class="dashboard-title mb-3">Trang quản trị hệ thống</h2>
        <p class="lead mb-1">Xin chào, <span class="username">@User.Identity.Name</span>!</p>
        <p>Bạn đang đăng nhập với quyền <strong>Administrator</strong>.</p>
    </div>

    <div class="dashboard-section">
        <h4 class="section-title mb-3">Chức năng quản lý</h4>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <a href="/HoiVien/HoiVienListView" class="nav-link">
                    <i class="bi bi-people-fill"></i> Quản lý hội viên
                </a>
            </li>
            <li class="list-group-item">
                <a href="/HuanLuyenVien/HLVListView" class="nav-link">
                    <i class="bi bi-person-badge-fill"></i> Quản lý huấn luyện viên
                </a>
            </li>
            <li class="list-group-item">
                <a href="/GoiTap/GoiTapListView" class="nav-link">
                    <i class="bi bi-calendar-check-fill"></i> Quản lý gói tập
                </a>
            </li>
            <li class="list-group-item">
                <a href="/SanPham/SanPhamListView" class="nav-link">
                    <i class="bi bi-bag-fill"></i> Cửa hàng Gym
                </a>
            </li>
        </ul>
    </div>
</div>

<!-- ===== CSS Tùy chỉnh theo màu thương hiệu ===== -->
<style>
    body {
        background-color: #161616;
        color: #EDECFF;
        font-family: 'Poppins', sans-serif;
    }

    .admin-dashboard {
        max-width: 900px;
        margin: auto;
    }

    .dashboard-title {
        color: #AEE710;
        font-weight: 600;
    }

    .welcome-card {
        background-color: #012E25;
        border-left: 6px solid #65C71C;
        border-radius: 12px;
        color: #EDECFF;
    }

    .username {
        color: #65C71C;
        font-weight: bold;
    }

    .dashboard-section .section-title {
        color: #AEE710;
        font-weight: 500;
        border-bottom: 2px solid #0BA08B;
        padding-bottom: 6px;
    }

    .list-group-item {
        background-color: #012E25;
        border: 1px solid #0BA08B;
        margin-bottom: 8px;
        border-radius: 10px;
        transition: all 0.2s ease-in-out;
    }

    .list-group-item:hover {
        background-color: #0BA08B;
        color: #fff;
        transform: translateY(-3px);
    }

    .nav-link {
        color: #EDECFF;
        text-decoration: none;
        display: flex;
        align-items: center;
        font-weight: 500;
    }

    .nav-link i {
        margin-right: 10px;
        color: #AEE710;
    }

    .nav-link:hover {
        color: #161616;
    }

    .list-group-item:hover i {
        color: #161616;
    }

    @@media (max-width: 768px) {
        .admin-dashboard {
            padding: 20px;
        }

        .dashboard-title {
            font-size: 1.5rem;
        }
    }
</style>

<!-- Bootstrap Icons CDN (nếu chưa có trong layout) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
